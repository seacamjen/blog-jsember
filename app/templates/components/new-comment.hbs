{{#if addNewComment}}
<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="comment">Comment</label>
        {{textarea value=comment id="comment"}}
      </div>
        <button {{action 'saveComment'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default"{{action "commentFormShow"}}> <span class="glyphicon glyphicon-plus"></span> Add Comment</button>
{{/if}}
