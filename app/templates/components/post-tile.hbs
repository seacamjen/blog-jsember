<li>
  {{post.title}} by {{post.author}}
  {{#if isContentShowing}}
    <p {{action 'contentHide'}}>{{post.content}} <img src={{post.img}} alt="post image"></p>
  {{else}}
    <button {{action 'contentShow'}}>Show Article</button>
  {{/if}}
  {{update-post post=post update="update"}}
  <button {{action 'delete' post}}>Delete post</button>
</li>
